  <!-- Page Content -->
  <div class="container">

    <div class="row">

      <div class="col-lg-3">
        <h1 class="my-4"></h1>
        <div class="list-group">
          <a  href ="#" onclick="window.history.back();" class="list-group-item active"> &larr; Πίσω</a>
        </div>
      </div>
      <!-- /.col-lg-3 -->
        @if(auth.user.role == 'farm')

      <div class="col-lg-9">

        <div class="card mt-4">
          <div class="card-body">
           <center> <a href="#"><img class="card-img-top" src="{{category.type}}.png" alt=""  style = "height: 300px;width:50%"></a></center>
            <h3 class="card-title">{{category.name}}</h3>
          </div>
        </div>
        <!-- /.card -->

        <div class="card card-outline-secondary my-4">
          <div class="card-header">
            Ποσότητα
          </div>
          <div class="card-body">
           <form style = "width:100%">
              {{ csrfField() }}
                <div class="form-row">
          
                  <div class="form-group col-md-6">
                        <label for="inlineFormInputGroupUsername">Ποσότητα</label>

                  <div class="input-group" >
                    <div class="input-group-prepend">
                      <div class="input-group-text">kg</div>
                    </div>
                    <input type="number" id='posothta' onchange="changeValue()" class="form-control" name ="quantity" id="inlineFormInputGroupUsername" placeholder="Ποσότητα">
                  </div>
                  </div>
              
                  <div class="form-group col-md-6">
                        <label for="inlineFormInputGroupUsername">Τελική Τιμή</label>

                  <div class="input-group" >
                    <div class="input-group-prepend">
                      <div class="input-group-text">&euro;</div>
                    </div>
                    <input type="text" id='timh'  class="form-control" name ="discount" id="inlineFormInputGroupUsername" placeholder="Τιμή" readonly>
                  </div>
                  </div>
                  
                </div>

               
                <button type="button" class="btn btn-success">Αγορά</button>
