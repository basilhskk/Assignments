      </div>
      <!-- /.col-lg-9 -->
      @endif
      
      @if(auth.user.role == 'supplier')
        <div class="col-lg-9">

        <div class="card mt-4">
          <div class="card-body">
           <center> <a href="#"><img class="card-img-top" src="/img/coupon.png" alt=""  style = "height: 200πχ;width:50%"></a></center>
            <h3 class="card-title">{{coupon.name}}</h3>
            <h5>Κόστος {{coupon.points}} πόντοι</h5>

          <p class="card-text">{{coupon.description}}</p>
          </div>
        </div>
        <!-- /.card -->

        <div class="card card-outline-secondary my-4">
          <div class="card-header">
            Εξαργύρωση
          </div>
          <div class="card-body">    
                <h5>Διαθέσιμοι πόντοι : {{auth.user.points}} πόντοι</h5>
              @if(auth.user.points >= coupon.points)
                <button type="submit" class="btn btn-success">Εξαργύρωση</button>
              @endif
              @if(auth.user.points < coupon.points)
                <button type="submit" class="btn btn-danger" disabled>Δεν έχεις αρκετούς πόντους</button>
              @endif
          </div>
        </div>
        <!-- /.card -->

      </div>
      <!-- /.col-lg-9 -->
      @endif

    </div>

  </div>
  <!-- /.container -->

  <!-- Footer -->
  @include('parts.footbar')

